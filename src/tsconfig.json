{
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noImplicitAny": false,  // Bypass raising errors on `any` type
      "forceConsistentCasingInFileNames": true,
      "jsx": "react"
    },
    "exclude": [
        "vendor"
    ],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
  }